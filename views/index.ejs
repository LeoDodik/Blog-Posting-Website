<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- BOOTSTRAP AND CSS HREF LINKS-->
    <link rel="stylesheet" href="/styles/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Document</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">BlogJunction</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Blogs</a>
              </li>
            </ul>
            
          </div>
        </div>
      </nav>

      <form id="blogForm" action="/submit-blog" method="POST">
        <div class="mb-3">
            <label for="blogName" class="form-label"><h1>Name your Blog</h1></label>
            <input type="text" class="form-control" id="blogName" name="blogName" placeholder="Blog about..." value="Blog Name">
        </div>
        <div class="mb-3">
            <label for="blogContent" class="form-label" value = "Blog Text"><h1>Write down your imagination</h1></label>
            <textarea class="form-control" id="blogContent" name="blogContent" rows="3" placeholder="Last week I went to a store, when all of a sudden...."></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-dark">Submit</button>
    </form>


    <h1 class="listOfBlogs">Blog Posts</h1>
    <ul class="blogsList">
        <% blogs.forEach((blog, index) => { %>
            <li>
                <strong><%= blog.name %></strong>: <%= blog.content %>
                <form action="/edit-blog/<%= index %>" method="get">
                    <button type="submit">Edit</button>
                </form>
                <form action="/delete-blog/<%= index %>" method="post">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>

</body>
</html>